<h4>Post detalis:</h4> <br />
<p>
	<%= @row ['content']  %>
	<br /><br />
	<span style="font-size: 75%; color: #999">Added at <%= @row ['created_date'] %></span>	
</p> <br />
<h4>Комментарии:</h4>

<% @comments.each do |comment| %>
	<p>
		<%= comment['content'] %><br /><br />
		<span style="font-size: 75%; color: #999"> Added at <%= comment ['created_date'] %></span>			
	</p>
	<hr />
<% end %>

<p>
	<form action="/details/<%= @row['id'] %>" method="POST" >
	  	<textarea name="content" class="form-control" rows="4" placeholder="Введите здесь комментарий" style="width: 400px"></textarea><br />
	  	<button type="submit" class="btn btn-success">Опубликовать комментарий</button>
	</form>
</p>